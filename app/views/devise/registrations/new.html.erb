<h2 class="title">Sign up</h2>

<div class="columns">
  <div class="column is-two-fifths">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label(:firstname, 'First Name') %><br />
        <%= f.text_field :firstname, autofocus: true, autocomplete: "first name", :class => "input" %>
      </div>

      <div class="field">
        <%= f.label(:lastname, 'Last Name') %><br />
        <%= f.text_field :lastname, autofocus: true, autocomplete: "last name", :class => "input" %>
      </div>

      <div class="field">
        <%= f.label(:username, 'Username') %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => "input" %>
      </div>

      <div class="field">
        <%= f.label(:email, 'Email') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input" %>
      </div>

      <div class="field">
        <%= f.label(:password, 'Password') %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", :class => "input" %>
      </div>

      <div class="field">
        <%= f.label(:password_confirmation, 'Password Confirmation') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => "button is-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
