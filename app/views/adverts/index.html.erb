<h1 class="title">Ads</h1>

<table class="table is-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Condition</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <% if @adverts %>
            <% @adverts.each do |advert| %>
                <tr>
                    <td><%= link_to advert.book.title, advert_path(advert.id)%></td>
                    <td><%= advert.condition %></td>
                    <td>$<%= advert.price %></td>
                </tr>
            <%end%>
        <%end%> 
    </tbody>
</table>

<p><%= link_to("Back", exchange_index_path, :class => "button")%></p>